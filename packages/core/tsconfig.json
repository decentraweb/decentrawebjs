{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "es6",
    "rootDir": "./src",
    "outDir": "./build/esm",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "./src"
  ],
  "ts-node": {
    "files": true,
    "compilerOptions": {
    }
  }
}
